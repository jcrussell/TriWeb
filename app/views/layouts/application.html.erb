<!DOCTYPE html>
<html>
  <head>
    <title><%= APP_CONFIG['title'] %></title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="pagebody">
      <a href="/"><img src="<%= APP_CONFIG['banner_logo'] %>" alt=<%= APP_CONFIG['title'] %> id="banner_logo" /></a>
      <div id="nav">
        <span>TODO</span>
      </div>
      <div id="pagecontents">
        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert"><%= alert %></p>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
